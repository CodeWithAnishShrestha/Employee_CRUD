@model List<Employee>
<div class=" container">
    <div class="row pt-4 pt-3">
        <div class="col-6">
            <h2 class=" text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create New Category
            </a>
        </div>
    </div>
<table class=" table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Employee ID
            </th>
            <th>
                Employee Name
            </th>
            <th>
                E-mail
            </th>
            
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.Id))
    {
        <tr>
            <td>@obj.Id</td>
        
            <td>@obj.Name</td>
        
            <td>@obj.Email</td>
        
            
            <td>
                <div class=" w-75 btn-grp" role="group">
                            <a asp-controller="Employee" asp-action="Edit" class="btn btn-primary" asp-route-id="@obj.Id "> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Employee" asp-action="Delete" class="btn btn-danger" asp-route-id="@obj.Id "><i class="bi bi-trash"></i> Delete</a>
                        </div>
            </td>
        </tr>
        
    }
    </tbody>

</table>
</div>